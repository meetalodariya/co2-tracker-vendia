{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext", "dom", "dom.iterable"],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"],
      "@assets/*": ["src/assets/*"],
    }
  },
  "include": ["./src", "./webpack.config.ts", "./src/declaration.d.ts"]
}
